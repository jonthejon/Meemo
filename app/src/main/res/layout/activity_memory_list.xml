<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


   <android.support.v7.widget.RecyclerView
        android:id="@+id/memory_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:scrollbars="vertical"
        android:background="@color/white"

        app:layout_constraintBottom_toTopOf="@+id/parent_memory_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/parent_memory_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:paddingStart="@dimen/card_content_margins"
        android:paddingEnd="@dimen/card_content_margins"
        android:paddingTop="@dimen/main_memory_top_bottom_margins"
        android:paddingBottom="@dimen/main_memory_right_left_margins"
        android:textSize="@dimen/memory_text_size"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:fabSize="auto"
        android:src="@drawable/ic_add_24dp"
        android:layout_marginBottom="@dimen/FAB_margin"
        android:layout_marginEnd="@dimen/FAB_margin"
        android:onClick="onFABClick"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</android.support.constraint.ConstraintLayout>

<!--app:layout_constraintTop_toTopOf="parent"-->