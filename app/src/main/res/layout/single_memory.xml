<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginBottom="@dimen/card_top_bottom_margins"
        android:layout_marginTop="@dimen/card_top_bottom_margins"
        android:layout_marginStart="@dimen/card_right_left_margins"
        android:layout_marginEnd="@dimen/card_right_left_margins"
        card_view:contentPadding="@dimen/card_content_margins"

        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="@dimen/cardview_default_elevation">
    
    <TextView
        android:id="@+id/single_memory_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/memory_text_size"
        />

    </android.support.v7.widget.CardView>

</LinearLayout>